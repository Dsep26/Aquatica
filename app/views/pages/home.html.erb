
<div class="background">
  <div class="title">
    <h1>AQUATICA <%= image_tag "ship.png", class:"boat" %></h1>
    <p>Rent your boat for a new adventure</p>
  </div>
  <div class="search">
    <%= form_with url: boats_path, method: :get, class: "d-flex search-field" do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find Boats (Name or Categories)"
      %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="flex-display">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag("640px-Great_Blue_Hole.jpg", :class => "img-class-carousel", :alt => "chess") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("NEWSANDVIEWSOceanstockimage.jpg", :class => "img-class-carousel", :alt => "chess") %>
        </div>
        <div class="carousel-item">
          <%= image_tag("view-water-splash-mediterranean-sea.jpg", :class => "img-class-carousel", :alt => "chess") %>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <h2>Find your dream adventure with us, go for the offshore exploring</h2>
  <div class="home-card-container">

    <div class="card-home mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag "sailboat-yacht-shelter-sea.jpg", class:"img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Categories</h5>
              <p class="card-text">Choice your boat.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card-home mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag "view-from.jpg", class:"img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Discover</h5>
            <p class="card-text">Adventure, Discovery of new islands.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card-home mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag "ile aux cerf.png", class:"img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Ile Aux Cerf</h5>
              <p class="card-text">Visit our most popular touristic island.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="card-home mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag "fishing.jpg.webp", class:"img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Big Game Fishing</h5>
              <p class="card-text">Go for the Big one.</p>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
