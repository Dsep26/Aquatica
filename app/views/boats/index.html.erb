<div class = "container">
  <h1>Boats List</h1>
    <% @boats.each do |boat| %>
        <div class="card" style="width: 25rem;">
          <%= cl_image_tag boat.photo.key, width: 400, height: 300, crop: :fill %>
          <div class="card-body">
            <h4 class="card-title"><%= boat.name  %></h4>
            <p class="card-text"><%= boat.price  %></p>
            <p class="card-text"><%= boat.category  %></p>
            <a href="#" class="btn btn-primary">More</a>
          </div>
        </div>
        <br>
    <% end %>
</div>
